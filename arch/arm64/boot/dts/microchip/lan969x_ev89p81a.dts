/dts-v1/;

#include "lan969x.dtsi"

/ {
	model = "lan969x ev89p81a (ung8422)";
	aliases {
		serial0 = &usart0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	gpio-restart {
		compatible = "gpio-restart";
		gpios = <&gpio 60 GPIO_ACTIVE_LOW>;
		open-source;
		priority = <200>;
	};

	i2c-mux {
		compatible = "i2c-mux-gpio";
		#address-cells = <1>;
		#size-cells = <0>;
		i2c-parent = <&i2c3>;

		select-delay = <100>; /* The signal needs to get stabilized */

		mux-gpios = <&sgpio_out 28 0 GPIO_ACTIVE_HIGH
			     &sgpio_out 28 1 GPIO_ACTIVE_HIGH
			     &sgpio_out 28 2 GPIO_ACTIVE_HIGH
			     &sgpio_out 28 3 GPIO_ACTIVE_HIGH>;
		idle-state = <0x10>;

		i2c_sfp0: i2c-sfp0 {
			reg = <0x0>;
		};

		i2c_sfp1: i2c-sfp1 {
			reg = <0x1>;
		};

		i2c_sfp2: i2c-sfp2 {
			reg = <0x2>;
		};

		i2c_sfp3: i2c-sfp3 {
			reg = <0x3>;
		};

		i2c_sfp4: i2c-sfp4 {
			reg = <0x4>;
		};

		i2c_sfp5: i2c-sfp5 {
			reg = <0x5>;
		};

		i2c_sfp6: i2c-sfp6 {
			reg = <0x6>;
		};

		i2c_sfp7: i2c-sfp7 {
			reg = <0x7>;
		};

		i2c_sfp8: i2c-sfp8 {
			reg = <0x8>;
		};

		i2c_sfp9: i2c-sfp9 {
			reg = <0x9>;
		};
	};

	leds {
		compatible = "gpio-leds";

		led-s0-green {
			label = "s0:green";
			gpios = <&sgpio_out 0 0 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s0-yellow {
			label = "s0:yellow";
			gpios = <&sgpio_out 0 1 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s1-green {
			label = "s1:green";
			gpios = <&sgpio_out 1 0 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s1-yellow {
			label = "s1:yellow";
			gpios = <&sgpio_out 1 1 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s2-green {
			label = "s2:green";
			gpios = <&sgpio_out 2 0 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s2-yellow {
			label = "s2:yellow";
			gpios = <&sgpio_out 2 1 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s3-green {
			label = "s3:green";
			gpios = <&sgpio_out 3 0 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s3-yellow {
			label = "s3:yellow";
			gpios = <&sgpio_out 3 1 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s4-green {
			label = "s4:green";
			gpios = <&sgpio_out 4 0 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s4-yellow {
			label = "s4:yellow";
			gpios = <&sgpio_out 4 1 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s5-green {
			label = "s5:green";
			gpios = <&sgpio_out 5 0 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s5-yellow {
			label = "s5:yellow";
			gpios = <&sgpio_out 5 1 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s6-green {
			label = "s6:green";
			gpios = <&sgpio_out 6 0 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s6-yellow {
			label = "s6:yellow";
			gpios = <&sgpio_out 6 1 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s7-green {
			label = "s7:green";
			gpios = <&sgpio_out 7 0 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s7-yellow {
			label = "s7:yellow";
			gpios = <&sgpio_out 7 1 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s8-green {
			label = "s8:green";
			gpios = <&sgpio_out 8 0 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s8-yellow {
			label = "s8:yellow";
			gpios = <&sgpio_out 8 1 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s9-green {
			label = "s9:green";
			gpios = <&sgpio_out 9 0 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};

		led-s9-yellow {
			label = "s9:yellow";
			gpios = <&sgpio_out 9 1 GPIO_ACTIVE_LOW>;
			default-state = "off";
		};
	};

	mux-controller {
		compatible = "gpio-mux";
		#mux-control-cells = <0>;

		mux-gpios = <&sgpio_out 11 2 GPIO_ACTIVE_LOW>,
			    <&sgpio_out 11 3 GPIO_ACTIVE_LOW>;
	};

	sfp0: sfp0 {
		compatible = "sff,sfp";
		i2c-bus = <&i2c_sfp0>;
		tx-disable-gpios = <&sgpio_out 0 2 GPIO_ACTIVE_HIGH>;
		los-gpios = <&sgpio_in 0 0 GPIO_ACTIVE_HIGH>;
		mod-def0-gpios = <&sgpio_in 0 1 GPIO_ACTIVE_LOW>;
		tx-fault-gpios = <&sgpio_in 0 2 GPIO_ACTIVE_HIGH>;
	};

	sfp1: sfp1 {
		compatible = "sff,sfp";
		i2c-bus = <&i2c_sfp1>;
		tx-disable-gpios = <&sgpio_out 1 2 GPIO_ACTIVE_HIGH>;
		los-gpios = <&sgpio_in 1 0 GPIO_ACTIVE_HIGH>;
		mod-def0-gpios = <&sgpio_in 1 1 GPIO_ACTIVE_LOW>;
		tx-fault-gpios = <&sgpio_in 1 2 GPIO_ACTIVE_HIGH>;
	};

	sfp2: sfp2 {
		compatible = "sff,sfp";
		i2c-bus = <&i2c_sfp2>;
		tx-disable-gpios = <&sgpio_out 2 2 GPIO_ACTIVE_HIGH>;
		los-gpios = <&sgpio_in 2 0 GPIO_ACTIVE_HIGH>;
		mod-def0-gpios = <&sgpio_in 2 1 GPIO_ACTIVE_LOW>;
		tx-fault-gpios = <&sgpio_in 2 2 GPIO_ACTIVE_HIGH>;
	};

	sfp3: sfp3 {
		compatible = "sff,sfp";
		i2c-bus = <&i2c_sfp3>;
		tx-disable-gpios = <&sgpio_out 3 2 GPIO_ACTIVE_HIGH>;
		los-gpios = <&sgpio_in 3 0 GPIO_ACTIVE_HIGH>;
		mod-def0-gpios = <&sgpio_in 3 1 GPIO_ACTIVE_LOW>;
		tx-fault-gpios = <&sgpio_in 3 2 GPIO_ACTIVE_HIGH>;
	};

	sfp4: sfp4 {
		compatible = "sff,sfp";
		i2c-bus = <&i2c_sfp4>;
		tx-disable-gpios = <&sgpio_out 4 2 GPIO_ACTIVE_HIGH>;
		los-gpios = <&sgpio_in 4 0 GPIO_ACTIVE_HIGH>;
		mod-def0-gpios = <&sgpio_in 4 1 GPIO_ACTIVE_LOW>;
		tx-fault-gpios = <&sgpio_in 4 2 GPIO_ACTIVE_HIGH>;
	};

	sfp5: sfp5 {
		compatible = "sff,sfp";
		i2c-bus = <&i2c_sfp5>;
		tx-disable-gpios = <&sgpio_out 5 2 GPIO_ACTIVE_HIGH>;
		los-gpios = <&sgpio_in 5 0 GPIO_ACTIVE_HIGH>;
		mod-def0-gpios = <&sgpio_in 5 1 GPIO_ACTIVE_LOW>;
		tx-fault-gpios = <&sgpio_in 5 2 GPIO_ACTIVE_HIGH>;
	};

	sfp6: sfp6 {
		compatible = "sff,sfp";
		i2c-bus = <&i2c_sfp6>;
		tx-disable-gpios = <&sgpio_out 6 2 GPIO_ACTIVE_HIGH>;
		los-gpios = <&sgpio_in 6 0 GPIO_ACTIVE_HIGH>;
		mod-def0-gpios = <&sgpio_in 6 1 GPIO_ACTIVE_LOW>;
		tx-fault-gpios = <&sgpio_in 6 2 GPIO_ACTIVE_HIGH>;
	};

	sfp7: sfp7 {
		compatible = "sff,sfp";
		i2c-bus = <&i2c_sfp7>;
		tx-disable-gpios = <&sgpio_out 7 2 GPIO_ACTIVE_HIGH>;
		los-gpios = <&sgpio_in 7 0 GPIO_ACTIVE_HIGH>;
		mod-def0-gpios = <&sgpio_in 7 1 GPIO_ACTIVE_LOW>;
		tx-fault-gpios = <&sgpio_in 7 2 GPIO_ACTIVE_HIGH>;
	};

	sfp8: sfp8 {
		compatible = "sff,sfp";
		i2c-bus = <&i2c_sfp8>;
		tx-disable-gpios = <&sgpio_out 8 2 GPIO_ACTIVE_HIGH>;
		los-gpios = <&sgpio_in 8 0 GPIO_ACTIVE_HIGH>;
		mod-def0-gpios = <&sgpio_in 8 1 GPIO_ACTIVE_LOW>;
		tx-fault-gpios = <&sgpio_in 8 2 GPIO_ACTIVE_HIGH>;
	};

	sfp9: sfp9 {
		compatible = "sff,sfp";
		i2c-bus = <&i2c_sfp9>;
		tx-disable-gpios = <&sgpio_out 9 2 GPIO_ACTIVE_HIGH>;
		los-gpios = <&sgpio_in 9 0 GPIO_ACTIVE_HIGH>;
		mod-def0-gpios = <&sgpio_in 9 1 GPIO_ACTIVE_LOW>;
		tx-fault-gpios = <&sgpio_in 9 2 GPIO_ACTIVE_HIGH>;
	};
};

&flx0 {
	atmel,flexcom-mode = <ATMEL_FLEXCOM_MODE_USART>;
	status = "okay";

	usart0: serial@200 {
		pinctrl-0 = <&fc0_pins>;
		pinctrl-names = "default";
		status = "okay";
	};
};

&flx2 {
	atmel,flexcom-mode = <ATMEL_FLEXCOM_MODE_SPI>;
	status = "okay";

	spi2: spi@400 {
		pinctrl-0 = <&fc2_pins>;
		pinctrl-names = "default";
		cs-gpios = <&gpio 63 GPIO_ACTIVE_LOW>;
		status = "okay";
	};
};

&flx3 {
	atmel,flexcom-mode = <ATMEL_FLEXCOM_MODE_TWI>;
	status = "okay";

	i2c3: i2c@600 {
		pinctrl-0 = <&fc3_pins>;
		pinctrl-names = "default";
		i2c-analog-filter;
		i2c-digital-filter;
		i2c-digital-filter-width-ns = <35>;
		i2c-sda-hold-time-ns = <1500>;
		status = "okay";
	};
};

&gpio {
	emmc_sd_pins: emmc-sd-pins {
		/* eMMC_SD - CMD, CLK, D0, D1, D2, D3, D4, D5, D6, D7, RSTN */
		pins = "GPIO_14", "GPIO_15", "GPIO_16", "GPIO_17",
		       "GPIO_18", "GPIO_19", "GPIO_20", "GPIO_21",
		       "GPIO_22", "GPIO_23", "GPIO_24";
		function = "emmc_sd";
	};

	fan_pins: fan-pins {
		pins = "GPIO_25", "GPIO_26";
		function = "fan";
	};

	fc0_pins: fc0-pins {
		pins = "GPIO_3", "GPIO_4";
		function = "fc";
	};

	fc2_pins: fc2-pins {
		pins = "GPIO_64", "GPIO_65", "GPIO_66";
		function = "fc";
	};

	fc3_pins: fc3-pins {
		pins = "GPIO_55", "GPIO_56";
		function = "fc";
	};

	mdio_pins: mdio-pins {
		pins = "GPIO_9", "GPIO_10";
		function = "miim";
	};

	mdio_irq_pins: mdio-irq-pins {
		pins = "GPIO_11";
		function = "miim_irq";
	};

	sgpio_pins: sgpio-pins {
		/* SCK, D0, D1, LD */
		pins = "GPIO_5", "GPIO_6", "GPIO_7", "GPIO_8";
		function = "sgpio_a";
	};

	usb_ulpi_pins: usb-ulpi-pins {
		pins = "GPIO_30", "GPIO_31", "GPIO_32", "GPIO_33",
		"GPIO_34", "GPIO_35", "GPIO_36", "GPIO_37",
		"GPIO_38", "GPIO_39", "GPIO_40", "GPIO_41";
		function = "usb_ulpi";
	};

	usb_rst_pins: usb-rst-pins {
		pins = "GPIO_12";
		function = "usb2phy_rst";
	};

	usb_over_pins: usb-over-pins {
		pins = "GPIO_13";
		function = "usb_over_detect";
	};

	usb_power_pins: usb-power-pins {
		pins = "GPIO_1";
		function = "usb_power";
	};

	ptp_out_pins: ptp-out-pins {
		pins = "GPIO_58";
		function = "ptpsync_4";
	};

	ptp_ext_pins: ptp-ext-pins {
		pins = "GPIO_59";
		function = "ptpsync_5";
	};
};

&hwmon {
	pinctrl-0 = <&fan_pins>;
	pinctrl-names = "default";
};

&mdio0 {
	pinctrl-0 = <&mdio_pins>, <&mdio_irq_pins>;
	pinctrl-names = "default";
	reset-gpios = <&gpio 62 GPIO_ACTIVE_LOW>;
	status = "okay";

	phy3: phy@3 {
		reg = <3>;
		interrupts = <11 IRQ_TYPE_LEVEL_LOW>;
		interrupt-parent = <&gpio>;
	};
};

&qspi0 {
	status = "okay";

	spi-flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <104000000>;
		#address-cells = <1>;
		#size-cells = <1>;
		spi-tx-bus-width = <1>;
		spi-rx-bus-width = <4>;
		m25p,fast-read;
	};
};

&serdes {
	status = "okay";
};

&sdmmc0 {
	pinctrl-0 = <&emmc_sd_pins>;
	pinctrl-names = "default";
	max-frequency = <100000000>;
	bus-width = <8>;
	mmc-ddr-1_8v;
	mmc-hs200-1_8v;
	non-removable;
	disable-wp;
	status = "okay";
};

&sgpio {
	pinctrl-0 = <&sgpio_pins>;
	pinctrl-names = "default";

	microchip,sgpio-port-ranges = <0 28>;
	bus-frequency = <3000000>;
	status = "okay";

	gpio@0 {
		ngpios = <128>;
	};
	gpio@1 {
		ngpios = <128>;
	};
};

&switch {
	pinctrl-0 = <&ptp_out_pins>, <&ptp_ext_pins>;
	pinctrl-names = "default";

	status = "okay";
	ethernet-ports {
		#address-cells = <1>;
		#size-cells = <0>;

		port0: port@0 {
			reg = <0>;
			microchip,bandwidth = <10000>;
			phys = <&serdes 0>;
			phy-mode = "10gbase-r";
			sfp = <&sfp0>;
			microchip,sd-sgpio = <377>;
			managed = "in-band-status";
		};

		port4: port@4 {
			reg = <4>;
			microchip,bandwidth = <10000>;
			phys = <&serdes 1>;
			phy-mode = "10gbase-r";
			sfp = <&sfp1>;
			microchip,sd-sgpio = <377>;
			managed = "in-band-status";
		};

		port8: port@8 {
			reg = <8>;
			microchip,bandwidth = <10000>;
			phys = <&serdes 2>;
			phy-mode = "10gbase-r";
			sfp = <&sfp2>;
			microchip,sd-sgpio = <377>;
			managed = "in-band-status";
		};

		port12: port@12 {
			reg = <12>;
			microchip,bandwidth = <10000>;
			phys = <&serdes 3>;
			phy-mode = "10gbase-r";
			sfp = <&sfp3>;
			microchip,sd-sgpio = <377>;
			managed = "in-band-status";
		};

		port16: port@16 {
			reg = <16>;
			microchip,bandwidth = <10000>;
			phys = <&serdes 4>;
			phy-mode = "10gbase-r";
			sfp = <&sfp4>;
			microchip,sd-sgpio = <377>;
			managed = "in-band-status";
		};

		port20: port@20 {
			reg = <20>;
			microchip,bandwidth = <10000>;
			phys = <&serdes 5>;
			phy-mode = "10gbase-r";
			sfp = <&sfp5>;
			microchip,sd-sgpio = <377>;
			managed = "in-band-status";
		};

		port24: port@24 {
			reg = <24>;
			microchip,bandwidth = <10000>;
			phys = <&serdes 6>;
			phy-mode = "10gbase-r";
			sfp = <&sfp6>;
			microchip,sd-sgpio = <377>;
			managed = "in-band-status";
		};

		port25: port@25 {
			reg = <25>;
			microchip,bandwidth = <10000>;
			phys = <&serdes 7>;
			phy-mode = "10gbase-r";
			sfp = <&sfp7>;
			microchip,sd-sgpio = <377>;
			managed = "in-band-status";
		};

		port26: port@26 {
			reg = <26>;
			microchip,bandwidth = <10000>;
			phys = <&serdes 8>;
			phy-mode = "10gbase-r";
			sfp = <&sfp8>;
			microchip,sd-sgpio = <377>;
			managed = "in-band-status";
		};

		port27: port@27 {
			reg = <27>;
			microchip,bandwidth = <10000>;
			phys = <&serdes 9>;
			phy-mode = "10gbase-r";
			sfp = <&sfp9>;
			microchip,sd-sgpio = <377>;
			managed = "in-band-status";
		};

		port29: port@29 {
			reg = <29>;
			microchip,bandwidth = <1000>;
			phy-handle = <&phy3>;
			phy-mode = "rgmii";
		};
	};
};

&usb0 {
	status = "okay";
	pinctrl-0 = <&usb_ulpi_pins>, <&usb_rst_pins>, <&usb_over_pins>, <&usb_power_pins>;
	pinctrl-names = "default";
};
